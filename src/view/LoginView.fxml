<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="400" prefWidth="350" spacing="15" style="-fx-background-color: linear-gradient(to bottom right, #4a90e2, #357ABD);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">

    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>

    <Label style="-fx-text-fill: white;" text="Selamat Datang!" textFill="WHITE">
        <font>
            <Font name="Arial Bold" size="28" />
        </font>
    </Label>

    <Label style="-fx-text-fill: #d0d8f7;" text="Please login to your account" />

    <TextField fx:id="usernameField" prefWidth="250" promptText="Username" style="-fx-background-radius: 5; -fx-padding: 8; -fx-font-size: 14;" />

    <PasswordField fx:id="passwordField" prefWidth="250" promptText="Password" style="-fx-background-radius: 5; -fx-padding: 8; -fx-font-size: 14;" />

    <Button onAction="#handleLogin" prefHeight="35" prefWidth="250" style="-fx-background-color: #1b4f72;                 -fx-text-fill: white;                 -fx-font-weight: bold;                 -fx-background-radius: 5;                 -fx-border-color: transparent;                -fx-effect: dropshadow(one-pass-box, rgba(0,0,0,0.15), 4, 0, 0, 2);" text="Login">
    <font>
        <Font size="16" />
    </font>
</Button>


    <Label fx:id="messageLabel" style="-fx-text-fill: #ff6b6b; -fx-font-weight: bold;" />

</VBox>
